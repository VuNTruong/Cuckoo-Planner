@{
    ViewData["Title"] = "Forgot password ?? 😬😬😬😬";
}

<h2>@ViewData["Header"]</h2>
<br>
<br>
<br>
<div class="login-form-area">
    <form class="update-form" onsubmit="signIn(event)">
        <h2>
            Let's reset your password
        </h2>

        <p>Forgot your password? Don't panic! We've got you covered. Enter your email address here and we will send you an email with your password reset code which will be used in later step</p>

        <br>
        <label for="emailFieldPasswordReset">Email: </label><br>
        <input type="text" id="email_password_reset_field" name="email_password_reset_field" placeholder="Email" class="field"><br>
        <br>
        <button class="button">Send</button>
    </form>
</div>