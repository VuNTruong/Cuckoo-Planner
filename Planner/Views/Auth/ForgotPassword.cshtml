@using Planner.ViewModels;
@model Planner.ViewModels.ResetPasswordViewModel;

@{
    ViewData["Title"] = "Forgot password";
}

<h2>@ViewData["Header"]</h2>
<br>
<br>
<br>
<div class="login-form-area">
    <form class="update-form" action="PasswordResetAction" method="post">
        <script src="~/js/auth.js"></script>

        <h2>
            Let's reset your password
        </h2>

        <p>Forgot your password? Don't panic! We've got you covered. Enter your email address here and we will send you an email with your password reset code which will be used in the next step</p>

        <br>
        <label for="emailFieldPasswordReset">Email: </label><br>
        <input type="text" id="email_password_reset_field" name="Email" placeholder="Email" class="field"><br>
        <br>
        <input type="submit" class="button" value="Next" />
    </form>
</div>

@if (Model != null)
{
    // Create validation error view model
    ValidationErrorViewModel validationErrorViewModel = new ValidationErrorViewModel
    {
        ListOfErrors = Model.ValidationErrors
    };

    // Append the Partial view
    @await Html.PartialAsync("~/Views/Error/_SideValidationErrorShowPartial.cshtml", validationErrorViewModel);
}