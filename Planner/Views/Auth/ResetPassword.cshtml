@{
    ViewData["Title"] = "Reset password ??";

    string userEmail = (string)ViewData["UserEmail"];
}

<h2>@ViewData["Header"]</h2>
<br>
<br>
<div class="login-form-area">
    <script src="~/js/auth.js"></script>
    <form class="update-form">
        <h2>
            One more step
        </h2>

        <p>Enter your password reset token and enter your new password. Then, you should be all set. Resetting password for </p>
        <p id="user_email_for_password_reset">@userEmail</p>

        <br>
        <label for="tokenFieldPasswordReset">Token: </label><br>
        <input type="text" id="token_password_reset_field" name="token_password_reset_field" placeholder="Token" class="field">
        <br>

        <label for="newPasswordPasswordReset">New password: </label><br>
        <input type="password" id="new_password_password_reset_field" name="new_password_password_reset_field" placeholder="New password" class="field"/>
        <br>

        <label for="confirmPasswordPasswordReset">Confirm new password</label><br>
        <input type="password" id="confirm_new_password_password_reset_field" name="new_password_password_reset_field" placeholder="Confirm new password" class="field" onclick="resetUserPasswordBasedOnTokenAndEmail(event, @userEmail)"/>
        <br>

        <button type="submit" value="Submit" class="button" onclick="resetUserPasswordBasedOnTokenAndEmail(event)">Change password</button>
    </form>
</div>