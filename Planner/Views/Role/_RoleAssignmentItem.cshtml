@model Planner.ViewModels.RoleAssignmentViewModel

<div class="work-item" id="@Model.Id">
    <p class="title" id="role-assignment-@Model.RoleDetailRoleName"></p>
    <p class="detail">User: @Model.UserProfileFullName</p>
    <p class="detail">Role: @Model.RoleDetailRoleName</p>
    <div class="options">
        <button class="button" id="@Model.Id" onclick="onRoleRemove(event.target.id)">Remove</button>
    </div>
</div>