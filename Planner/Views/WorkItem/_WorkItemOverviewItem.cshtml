@*This is the child component of WorkItemOverview view*@

@model Planner.ViewModels.WorkItemViewModel;

<div class="work-item" id="@Model.Id">
    <p class="title" id="title-@Model.Id">@Model.Title</p>
    <p class="detail" id="detail-@Model.Id">@Model.Content</p>

    <div class="options">
        <button class="button" id="@Model.Id" onclick="onDelete(event.target.id)">Remove</button>
        <button class="button" id="@Model.Id" onclick="openUpdateTaskMenu(event.target.id)">Update</button>
    </div>
</div>